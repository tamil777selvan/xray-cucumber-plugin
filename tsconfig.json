{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "./dist/cjs",
		"moduleResolution": "Node",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"removeComments": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}